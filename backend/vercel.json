{
  "version": 2,
  "name": "rizara-backend",

  "builds": [
    {
      "src": "src/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "src/cron/syncShipments.js",
      "use": "@vercel/node"
    }
  ],

  "crons": [
    {
      "path": "/api/cron/sync-shipments",
      "schedule": "*/15 * * * *"
    }
  ],

  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "X-Powered-By",
          "value": "The Petal Pouches"
        }
      ]
    }
  ],

  "env": {
    "NODE_ENV": "production"
  }
}
