{
  "version": 2,
  "name": "rizara-backend",

  "builds": [
    {
      "src": "src/index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [".env", ".env.local"]
      }
    }
  ],

  "routes": [
    {
      "src": "/(.*)",
      "dest": "src/index.js"
    }
  ],

  "crons": [
    {
      "path": "/api/cron/sync-shipments",
      "schedule": "0 0 * * *"
    }
  ]
}